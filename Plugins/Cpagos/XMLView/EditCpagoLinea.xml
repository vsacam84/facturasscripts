<?xml version="1.0" encoding="UTF-8"?>
<view>
    <columns>
        <group name="facturas">
            <column name="Factura" order="100">
                <widget type="autocomplete" fieldname="idfactura" onclick="EditFacturaProveedor">
                    <values source="facturasprov" fieldcode="idfactura" fieldtitle="numproveedor"  />
                </widget>
            </column>

            <column name="Total" order="150"> 
                <widget type="money" fieldname="total" readonly="true"/>
            </column>
            
             <column name="idcpago" order="100" display="none"> 
                <widget type="text" fieldname="idcpago"/>
            </column>
        </group>
    </columns>
</view>