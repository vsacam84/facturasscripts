<?xml version="1.0" encoding="UTF-8"?>
<!--
    Document   : reportsamounts.xml
    Author     : Jose Antonio Cuello
    Description:
        Structure for the amounts and balance reports table.
-->
<table>
    <column>
        <name>channel</name>
        <type>integer</type>
    </column>
    <column>
        <name>endcodsubaccount</name>
        <type>character varying(15)</type>
    </column>
    <column>
        <name>enddate</name>
        <type>date</type>
    </column>
    <column>
        <name>id</name>
        <type>serial</type>
        <null>NO</null>
    </column>
    <column>
        <name>idcompany</name>
        <type>integer</type>
    </column>
    <column>
        <name>level</name>
        <type>integer</type>
        <null>NO</null>
        <default>0</default>
    </column>
    <column>
        <name>name</name>
        <type>character varying(100)</type>
        <null>NO</null>
    </column>
    <column>
        <name>startcodsubaccount</name>
        <type>character varying(15)</type>
    </column>
    <column>
        <name>startdate</name>
        <type>date</type>
        <null>NO</null>
    </column>
    <column>
        <name>ignoreclosure</name>
        <type>boolean</type>
        <null>NO</null>
        <default>false</default>
    </column>
    <column>
        <name>ignoreregularization</name>
        <type>boolean</type>
        <null>NO</null>
        <default>false</default>
    </column>
    <constraint>
        <name>reportsamounts_pkey</name>
        <type>PRIMARY KEY (id)</type>
    </constraint>
    <constraint>
        <name>ca_reportsamounts_empresas</name>
        <type>FOREIGN KEY (idcompany) REFERENCES empresas (idempresa) ON DELETE CASCADE ON UPDATE CASCADE</type>
    </constraint>
</table>
